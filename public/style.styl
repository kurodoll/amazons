// ========================================================================= //
// *                                                                Colours //
// ========================================================================//
clr-blue-grey-1 = rgb(25, 50, 75)
clr-blue-grey-2 = rgb( 6, 12, 24)
clr-bg-darken   = rgba(0, 0, 0, .25)

clr-text         = white
clr-text-subdued = alpha(clr-text, .5)
clr-error        = rgb(255, 128, 128)
clr-error-bg     = rgba(255, 0, 0, .25)
clr-link         = rgb(128, 128, 255);

clr-input-bg       = rgba(0, 0, 0, .25)
clr-input-bg-hover = rgba(0, 0, 0,  .5)


// ========================================================================= //
// *                                                                General //
// ========================================================================//
html
  height 100%
  background linear-gradient(clr-blue-grey-1, clr-blue-grey-2) fixed no-repeat

div.container
  display flex
  align-items flex-end

// Header divs
div#header div:last-child
  margin-left auto

div#site-logo
  order 1

div#user-cp
  order 2

  margin-left 25px
  padding 10px

  background-color clr-bg-darken

div#user-info
  display none

div#error-box
  order 3
  display none

// Main Content divs
div#main-content
  display none

  padding-top 10px
  min-height calc(100vh - 100px)

  background-color clr-bg-darken

div#users-list-box
  order 1

  padding 10px
  width 200px

  background-color clr-bg-darken


// ========================================================================= //
// *                                                                   Text //
// ========================================================================//
h1
  margin 0
  margin-left 25px

  font 35pt Candara
  color lighten(clr-blue-grey-1, 50%)

  text-shadow 0 0 5px lighten(clr-blue-grey-1, 25%)

p
  margin 0

  font 10px Verdana
  color clr-text

p.heading
  margin-bottom  3px
  padding-bottom 1px

  font-weight bold
  border-bottom 1px lighten(clr-blue-grey-1, 50%) dashed

p#error-message
  padding 5px

  background-color clr-error-bg
  color            clr-error

span#username-display
  font-weight bold

.subdued
  color clr-text-subdued

a
  text-decoration none
  color clr-link

a:hover
  text-decoration underline

label
  display block

  font 10px Verdana
  color clr-text-subdued


// ========================================================================= //
// *                                                                  Forms //
// ========================================================================//
input
  padding       3px
  padding-left  5px
  padding-right 5px

  background clr-input-bg
  border none

  font 10px Verdana
  color clr-text

input:hover
  background clr-input-bg-hover

input[type='submit']
  cursor pointer
